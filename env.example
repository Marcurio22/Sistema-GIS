# ============================
# Variables de entorno (ejemplo)
# Copia este archivo como `.env` y rellena los valores reales.
# ============================

# --- Base de datos (PostgreSQL/PostGIS) ---
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=geo
POSTGRES_USER=usuario
POSTGRES_PASSWORD=changeme

# Cadena SQLAlchemy (opcional si prefieres una sola variable)
# Formato: postgresql+psycopg2://USER:PASSWORD@HOST:PORT/DB
DATABASE_URL=postgresql+psycopg2://usuario:changeme@localhost:5432/geo

# --- Rutas de datos ---
DATA_DIR=./data
RAW_DIR=./data/raw
INTERIM_DIR=./data/interim
PROCESSED_DIR=./data/processed

# --- Configuración de la app (Dash/Jupyter/etc.) ---
APP_DEBUG=true
APP_PORT=8050
# Host 0.0.0.0 permite acceder desde la red local (útil en contenedores)
APP_HOST=127.0.0.1

# Flask
FLASK_ENV=development
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
SECRET_KEY=LLAVE_SECRETA


# --- APIs externas (rellenar si se usan) ---
# Copernicus Data Space / SciHub
COPERNICUS_USER=tu_email@ejemplo.com
COPERNICUS_PASSWORD=tu_contraseña
# Mapbox para mapas base (opcional)
MAPBOX_TOKEN=
# AWS/S3 (opcional)
S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=

# --- Logs / Misc ---
LOG_LEVEL=INFO
TZ=Europe/Madrid

# --- Seguridad ---
# NO subas tu archivo `.env` al repositorio.
# Si cometes un .env por error, rota las credenciales inmediatamente.



MAIL_SERVER=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USE_TLS=True
MAIL_USERNAME=tu_username_aqui
MAIL_PASSWORD=tu_password_aqui
MAIL_DEFAULT_SENDER=noreply@agrosigpac.com